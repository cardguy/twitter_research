<!DOCTYPE html>
<html>
  <head>
    <title>TwitterResearch</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <% if user_signed_in? %>

      <nav>
        <ul>
          <li><%= link_to('Search', searches_url) %></li>
          <li><%= link_to('My Saved Tweets', tweets_url) %></li>
          <li><%= link_to('My Categories', categories_url) %></li>


          <li>
            <%= link_to('Log Out', destroy_user_session_url,
                        :method  => :delete,
                        :data => {:confirm => "Are you sure you want to log out?"}) %>
          </li>
        </ul>
      </nav>
    <% end %>

    <% if !flash.empty? %>
      <div>
        <p><%= flash.notice%></p>
        <p><%= flash.alert %></p>
      </div>
    <% end %>


    <div id = "content">
      <%= yield %>

    </div>

  </body>
</html>
