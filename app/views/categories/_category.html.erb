

<li id="<%= dom_)id(c) %>">
      <span class="title">
        <%= link_to(category.title, category_url(category)) %>
      </span>

      <span class="edit">
        <%= link_to('Edit', category_url(category)) %>
      </span>

      <span class="delete">
        <%= link_to('Delete', category_url(category)
                    :method => :delete,
                    :remote => true,
                    :data => {:confirm => "Are you sure?'}) %>
      </span>
</li>

